# Copy this file to terraform.tfvars and update with your values
# DO NOT commit terraform.tfvars to version control

# Proxmox API Configuration
proxmox_api_url      = "https://your-proxmox-server:8006/api2/json"
proxmox_api_token_id = "root@pam!terraform"
proxmox_api_token    = "your-api-token-here"
proxmox_tls_insecure = false

# Proxmox Node
proxmox_node = "pve"

# VM Configuration
vm_name      = "ubuntu-vm-01"
vm_cores     = 2
vm_memory    = 2048
vm_disk_size = 32
vm_storage   = "local-lvm"

# Ubuntu Template
ubuntu_template = "ubuntu-20.04-cloudinit"

# Network Configuration (optional)
# vm_ipv4_address = "192.168.1.100/24"
# vm_ipv4_gateway = "192.168.1.1"
# vm_dns_servers  = ["8.8.8.8", "8.8.4.4"]

# SSH Configuration (optional)
# ssh_public_key = "ssh-rsa AAAA..."
